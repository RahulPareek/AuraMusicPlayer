<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@color/TextColor</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="actionOverflowButtonStyle">@style/Overflow</item>
        <item name="android:popupMenuStyle">@style/Base.Widget.AppCompat.Light.PopupMenu.Overflow</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@drawable/action_mode_color</item>
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
        <item name="android:actionModeCloseDrawable">@drawable/navigation_back</item>

        <item name="android:listDivider">@color/windowBackground</item>

    </style>

    <style name="TextAppearance.Title" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextAppearance.SubTitle" parent="@style/TextAppearance.AppCompat.Small">

    </style>

    <style name="Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:background">@drawable/action_mode_color</item>
        <item name="android:actionModeBackground">@drawable/action_mode_color</item>
        <item name="titleTextStyle">@style/ActionModeTitleStyle</item>
    </style>

    <style name="ActionModeTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/windowBackground</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat.Light">
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/windowBackground</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    
    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/white</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/windowBackground</item>
    </style>

    <style name="CollapsingBarTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/windowBackground</item>
    </style>

    <style name="Overflow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/overflow_white</item>
    </style>


</resources>
