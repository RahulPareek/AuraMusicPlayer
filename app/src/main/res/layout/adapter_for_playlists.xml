<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.adapters.playlist.AdapterForPlaylists">


    <ImageView
        android:id="@+id/image_playlists"
        android:layout_width="@dimen/list_album_art_width"
        android:layout_height="@dimen/list_album_art_height"
        android:layout_marginRight="@dimen/album_art_song_name_padding"
        android:layout_marginEnd="@dimen/album_art_song_name_padding"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/playlist_name" />

    <ImageView
        android:layout_width="@dimen/overflow_width"
        android:layout_height="@dimen/overflow_height"
        android:id="@+id/overflow_playlists"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_playlists"
        android:layout_toEndOf="@+id/image_playlists"
        android:layout_toLeftOf="@+id/overflow_playlists"
        android:layout_toStartOf="@+id/overflow_playlists" />

    <TextView
        android:id="@+id/playlist_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_below="@+id/playlist_name"
        android:layout_toRightOf="@+id/image_playlists"
        android:layout_toEndOf="@+id/image_playlists"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_toLeftOf="@+id/overflow_playlists"
        android:layout_toStartOf="@+id/overflow_playlists" />


</RelativeLayout>

