<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/recyclerview_state_drawable">


    <ImageView
        android:id="@+id/image_default_playlist"
        android:layout_width="@dimen/list_album_art_width"
        android:layout_height="@dimen/list_album_art_height"
        android:layout_marginRight="@dimen/album_art_song_name_padding"
        android:layout_marginEnd="@dimen/album_art_song_name_padding"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/firstline_default_playist" />

    <TextView
        android:id="@+id/firstline_default_playist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_default_playlist"
        android:layout_toEndOf="@+id/image_default_playlist"
        android:layout_toLeftOf="@+id/overflow_default_playlist"
        android:layout_toStartOf="@+id/overflow_default_playlist" />

    <TextView
        android:id="@+id/secondline_default_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_below="@+id/firstline_default_playist"
        android:layout_toRightOf="@+id/image_default_playlist"
        android:layout_toEndOf="@+id/image_default_playlist"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_toLeftOf="@+id/overflow_default_playlist"
        android:layout_toStartOf="@+id/overflow_default_playlist" />

    <ImageView
        android:layout_width="@dimen/overflow_width"
        android:layout_height="@dimen/overflow_height"
        android:id="@+id/overflow_default_playlist"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/secondline_default_playlist"
        android:layout_toLeftOf="@+id/overflow_default_playlist"
        android:layout_toStartOf="@+id/overflow_default_playlist"
        android:layout_toRightOf="@+id/firstline_default_playist"
        android:layout_toEndOf="@+id/firstline_default_playist"
        android:visibility="gone"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/textView2" />


</RelativeLayout>